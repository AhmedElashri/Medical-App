<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnLogout"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:background="@drawable/round_border"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnYourProfile"
            android:layout_width="350dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Your Profile"
            android:background="@drawable/round_border3"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHealthEducation"
            android:layout_width="350dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Health Education"
            android:background="@drawable/round_border3"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnHealthcareProfessionals"
            android:layout_width="350dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Healthcare Professionals"
            android:background="@drawable/round_border3"
            android:textSize="30dp"
            android:textColor="@color/white"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnSelfCheckin"
            android:layout_width="350dp"
            android:layout_height="125dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:text="Self Check-In"
            android:background="@drawable/round_border3"
            android:textSize="30dp"
            android:textColor="@color/white"/>

</LinearLayout>